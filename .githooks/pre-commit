#!/bin/sh

# Check if skribenten-web/frontend exists, if not, skip linting
if [ ! -d "skribenten-web/frontend" ]; then
  echo "‚ö†Ô∏è Skipping pre-commit checks (skribenten-web/frontend is missing)"
  exit 0
fi

cd skribenten-web/frontend

# Check if node_modules exists, if not, skip linting with a warning
if [ ! -d "node_modules" ]; then
  echo "‚ö†Ô∏è Skipping pre-commit checks in skribenten-web/frontend (node_modules missing)"
  echo "üí°To enable pre-commit checks, run 'npm install' in skribenten-web/frontend"
  exit 0
fi

npx lint-staged
