{
  "name": "skribenten-web-frontend",
  "private": true,
  "type": "module",
  "version": "0.0.0",
  "scripts": {
    "build": "tsc && vite build",
    "check-types": "tsc --noemit",
    "cypress": "cypress open",
    "cypress:component": "cypress run --component -b chrome",
    "cypress:e2e": "cypress run -b chrome",
    "dev": "vite --host",
    "format": "biome format --write .",
    "lint": "biome check .",
    "lint:write": "biome check --write .",
    "lint-and-check-types": "${npm_execpath} run format && ${npm_execpath} run lint && ${npm_execpath} run stylelint && ${npm_execpath} run check-types",
    "preview": "vite preview",
    "stylelint": "stylelint '**/*.{tsx,css}'",
    "stylelint:fix": "stylelint --fix '**/*.{tsx,css}'",
    "test": "vitest --config ./vite.config.ts",
    "tsc:watch": "tsc --watch",
    "verify": "${npm_execpath} run lint-and-check-types && vitest run --config ./vite.config.ts && ${npm_execpath} run cypress:component && ${npm_execpath} run cypress:e2e"
  },
  "dependencies": {
    "@emotion/react": "11.14.0",
    "@hookform/resolvers": "5.2.2",
    "@navikt/aksel-icons": "8.1.0",
    "@navikt/ds-css": "8.1.0",
    "@navikt/ds-react": "8.1.0",
    "@tanstack/react-query": "5.90.20",
    "@tanstack/react-router": "1.157.15",
    "axios": "1.13.5",
    "date-fns": "4.1.0",
    "dompurify": "3.3.1",
    "fuse.js": "7.1.0",
    "immer": "11.1.3",
    "lodash": "4.17.23",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-hook-form": "7.71.1",
    "react-pdf": "10.3.0",
    "zod": "4.3.6"
  },
  "devDependencies": {
    "@biomejs/biome": "2.4.2",
    "@navikt/aksel-stylelint": "8.1.0",
    "@tanstack/react-query-devtools": "5.91.2",
    "@tanstack/react-router-devtools": "1.157.15",
    "@tanstack/router-vite-plugin": "1.157.15",
    "@testing-library/react": "16.3.2",
    "@testing-library/user-event": "14.6.1",
    "@types/lodash": "4.17.23",
    "@types/node": "25.0.10",
    "@types/react": "19.2.9",
    "@types/react-dom": "19.2.3",
    "@vitejs/plugin-react": "5.1.2",
    "cypress": "15.9.0",
    "happy-dom": "20.3.9",
    "jsdom": "27.4.0",
    "lint-staged": "16.2.7",
    "postcss-styled-syntax": "0.7.1",
    "stylelint": "17.1.1",
    "stylelint-config-standard": "40.0.0",
    "typescript": "5.9.3",
    "vite": "7.3.1",
    "vitest": "4.0.18"
  },
  "overrides": {
    "cypress": {
      "qs": ">=6.14.1"
    }
  }
}
